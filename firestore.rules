rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // [함수] 데이터 타입 및 길이 검증
    function isValidText(text, min, max) {
      return text is string && text.size() >= min && text.size() <= max;
    }

    // [함수] 쿼리 갯수 제한 검증 (비용 보호)
    // limit이 명시된 경우에만 maxLimit과 비교하고, 명시되지 않은 경우(null)는 통과시킵니다.
    function isWithinLimit(maxLimit) {
      return request.query.limit == null || request.query.limit <= maxLimit;
    }

    // [함수] 게시물 생성 시 검증
    function isValidNewCase() {
      let data = request.resource.data;
      return 
        data.hotScore == 0 &&
        data.guiltyCount == 0 &&
        data.innocentCount == 0 &&
        data.commentCount == 0 &&
        data.status == 'OPEN' &&
        data.authorId == request.auth.uid &&
        isValidText(data.title, 1, 100) &&
        isValidText(data.content, 1, 3000);
    }

    // [함수] 작성자 본인 확인
    function isAuthor() {
      return request.resource.data.authorId == request.auth.uid;
    }
    
    function isOwner() {
      return resource.data.authorId == request.auth.uid;
    }

    // [함수] 좋아요 로직 검증
    function isValidLikeUpdate(caseId) {
       let hasVoted = exists(/databases/$(database)/documents/cases/$(caseId)/votes/$(request.auth.uid));
       let data = resource.data;
       let resData = request.resource.data;
       
       let currentLikedBy = data.get('likedBy', []);
       let newLikedBy = resData.get('likedBy', []);
       let currentLikes = data.get('likes', 0);
       let newLikes = resData.get('likes', 0);

       return hasVoted &&
       resData.diff(data).affectedKeys().hasOnly(['likes', 'likedBy']) &&
       !(request.auth.uid in currentLikedBy) &&
       (request.auth.uid in newLikedBy) &&
       newLikes == currentLikes + 1 &&
       newLikedBy.size() == currentLikedBy.size() + 1;
    }

    // users 컬렉션
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // cases 컬렉션
    match /cases/{caseId} {
      allow list: if isWithinLimit(20);
      allow get: if true;
      
      allow create: if request.auth != null && isValidNewCase();
      
      allow update: if request.auth != null && (
        isOwner() || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['guiltyCount', 'innocentCount']))
      );
      
      allow delete: if request.auth != null && isOwner();

      match /votes/{userId} {
        allow read: if true; // 단일 조회(get)와 목록 조회(list) 모두 허용
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // comments 서브컬렉션
      match /comments/{commentId} {
        allow list: if isWithinLimit(100); // 댓글은 최대 100개까지
        allow get: if true;
        
        allow create: if request.auth != null && isAuthor() && isValidText(request.resource.data.content, 1, 500);
        
        allow update: if request.auth != null && (
          isOwner() || isValidLikeUpdate(caseId)
        );
        
        allow delete: if request.auth != null && isOwner();

        match /replies/{replyId} {
          allow list: if isWithinLimit(100); 
          allow get: if true;
          
          allow create: if request.auth != null && isAuthor() && isValidText(request.resource.data.content, 1, 300);
          
          allow update: if request.auth != null && (
            isOwner() || isValidLikeUpdate(caseId)
          );
          
          allow delete: if request.auth != null && isOwner();
        }
      }
    }
  }
}