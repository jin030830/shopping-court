rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // [함수] 데이터 타입 및 길이 검증
    function isValidText(text, min, max) {
      return text is string && text.size() >= min && text.size() <= max;
    }

    // [함수] 쿼리 갯수 제한 검증
    function isWithinLimit(maxLimit) {
      return request.query.limit == null || request.query.limit <= maxLimit;
    }

    // [함수] 게시물 생성 시 검증
    function isValidNewCase() {
      let data = request.resource.data;
      return 
        data.get('hotScore', 0) == 0 &&
        data.get('guiltyCount', 0) == 0 &&
        data.get('innocentCount', 0) == 0 &&
        data.get('commentCount', 0) == 0 &&
        data.status == 'OPEN' &&
        data.authorId == request.auth.uid &&
        isValidText(data.title, 1, 100) &&
        isValidText(data.content, 1, 3000);
    }

    // [함수] 게시글 작성자 본인 확인
    function isCaseOwner(caseId) {
      return get(/databases/$(database)/documents/cases/$(caseId)).data.authorId == request.auth.uid;
    }

    // [함수] 좋아요 업데이트 검증 (중복 차단 핵심)
    function isValidLikeUpdate() {
      let diff = request.resource.data.diff(resource.data);
      return diff.affectedKeys().hasOnly(['likes', 'likedBy']) &&
             // 기존 likedBy 배열에 내 UID가 없어야 함 (중복 좋아요 방지)
             !resource.data.likedBy.hasAny([request.auth.uid]) &&
             // 새 데이터의 likedBy에는 내 UID가 추가되어야 함
             request.resource.data.likedBy.hasAll([request.auth.uid]) &&
             // 숫자는 정확히 1만 증가해야 함
             request.resource.data.likes == resource.data.likes + 1;
    }

    // [함수] 투표 업데이트 검증
    function isValidVoteUpdate() {
      let diff = request.resource.data.diff(resource.data);
      return diff.affectedKeys().hasAny(['guiltyCount', 'innocentCount']) &&
             (request.resource.data.guiltyCount == resource.data.get('guiltyCount', 0) + 1 ||
              request.resource.data.innocentCount == resource.data.get('innocentCount', 0) + 1);
    }

    // users 컬렉션
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      match /activities/{activityId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // reports 컬렉션
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // cases 컬렉션
    match /cases/{caseId} {
      allow list: if isWithinLimit(20);
      allow get: if true;
      allow create: if request.auth != null && isValidNewCase();
      
      allow update: if request.auth != null && (
        (resource.data.authorId == request.auth.uid && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['guiltyCount', 'innocentCount', 'commentCount', 'hotScore'])) ||
        isValidVoteUpdate()
      );
      
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      match /votes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // comments 서브컬렉션
      match /comments/{commentId} {
        allow list: if isWithinLimit(100);
        allow get: if true;
        allow create: if request.auth != null && 
                     (isCaseOwner(caseId) || exists(/databases/$(database)/documents/cases/$(caseId)/votes/$(request.auth.uid))) &&
                     request.resource.data.authorId == request.auth.uid && 
                     isValidText(request.resource.data.content, 1, 500);
        
        allow update: if request.auth != null && (
          // 1. 모든 유저 공통: 중복 방지된 좋아요 클릭
          isValidLikeUpdate() ||
          // 2. 작성자 본인: 일반 수정 (좋아요 관련 필드 수정 불가)
          (resource.data.authorId == request.auth.uid && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['likes', 'likedBy']))
        );
        
        allow delete: if request.auth != null && (resource.data.authorId == request.auth.uid || isCaseOwner(caseId));

        match /replies/{replyId} {
          allow list: if isWithinLimit(100); 
          allow get: if true;
          allow create: if request.auth != null && 
                       (isCaseOwner(caseId) || exists(/databases/$(database)/documents/cases/$(caseId)/votes/$(request.auth.uid))) &&
                       request.resource.data.authorId == request.auth.uid && 
                       isValidText(request.resource.data.content, 1, 300);
          
          allow update: if request.auth != null && (
            isValidLikeUpdate() ||
            (resource.data.authorId == request.auth.uid && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['likes', 'likedBy']))
          );
          
          allow delete: if request.auth != null && (resource.data.authorId == request.auth.uid || isCaseOwner(caseId));
        }
      }
    }
  }
}